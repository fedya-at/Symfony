{% extends 'base.html.twig' %}

{% block title %}Add publications{% endblock %}

{% block body %}
<div class="mt-4 mb-5">
 <h1> Create a new Publication </h1>
 </br>
{{ form_start(form) }}

<div class="form-group">
{{ form_label(form.Titre) }} : 
{{ form_widget(form.Titre,{'attr':{'class':'form-control'}}) }}
</div>
<div class="form-group">
{{ form_label(form.Auteur) }} : 
{{ form_widget(form.Auteur,{'attr':{'class':'form-control'}}) }}
</div>
<div class="form-group">
{{ form_label(form.MotsCle) }} : 
{{ form_widget(form.MotsCle,{'attr':{'class':'form-control'}}) }}
</div>
<div class="form-group">
{{ form_label(form.Project) }} : 
{{ form_widget(form.Project,{'attr':{'class':'form-control'}}) }}
</div>
<div class="form-group">
{{ form_label(form.chercheurs) }} : 
{{ form_widget(form.chercheurs,{'attr':{'class':'form-control'}}) }}
</div>


{{ form_widget(form.Add) }}
{{ form_end(form) }}
</div>
{% endblock %}
